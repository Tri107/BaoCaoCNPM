    <style>
        :root {
            --sidebar-width: 250px;
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #3498db;
            --light-bg: #f8f9fa;
        }
        
        body {
            background-color: #f5f5f5;
            overflow-x: hidden;
        }
        
        #sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--primary-color);
            transition: all 0.3s;
            z-index: 1000;
            overflow-y: auto;
        }
        
        #sidebar.active {
            margin-left: -var(--sidebar-width);
        }
        
        #content {
            width: calc(100% - var(--sidebar-width));
            min-height: 100vh;
            margin-left: var(--sidebar-width);
            transition: all 0.3s;
        }
        
        #content.active {
            width: 100%;
            margin-left: 0;
        }
        
        .sidebar-header {
            padding: 20px;
            background-color: var(--secondary-color);
        }
        
        .sidebar-header h3 {
            color: white;
            margin: 0;
        }
        
        .components {
            padding: 20px 0;
        }
        
        .sidebar-item {
            padding: 10px 20px;
            display: block;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .sidebar-item:hover {
            color: white;
            background-color: var(--secondary-color);
        }
        
        .sidebar-item.active {
            color: white;
            background-color: var(--accent-color);
        }
        
        .sidebar-item i {
            margin-right: 10px;
        }
        
        .navbar {
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: transform 0.3s;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .stats-card {
            border-left: 5px solid var(--accent-color);
        }
        
        .chart-container {
            height: 300px;
        }
        
        .dashboard-icon {
            font-size: 2rem;
            color: var(--accent-color);
        }
        
        .page-content {
            display: none;
        }
        
        .page-content.active {
            display: block;
        }
        
        .table-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        
        .breadcrumb {
            margin-bottom: 20px;
        }
        
        .form-section {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .product-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }
        
        .status-badge {
            font-size: 0.8rem;
            font-weight: bold;
        }
        
        .btn-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 5px;
        }
        
        #currentDate {
            font-weight: bold;
        }
        
        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
